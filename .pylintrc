[MASTER]
extension-pkg-whitelist=PyQt5,quicktions
extension-pkg-allow-list=PyQt5,quicktions
load-plugins=pylint.extensions.broad_try_clause,pylint.extensions.emptystring,pylint.extensions.comparetozero,pylint.extensions.confusing_elif,pylint.extensions.bad_builtin,pylint.extensions.mccabe,pylint.extensions.docstyle,pylint.extensions.check_elif,pylint.extensions.redefined_variable_type,pylint.extensions.overlapping_exceptions,pylint.extensions.docparams

[FORMAT]
max-line-length=80

[MESSAGES CONTROL]
enable=useless-suppression
disable=logging-fstring-interpolation

[REPORTS]
output-format=colorized
msg-template="{module} - L{line:4d}: {msg_id:5s}: {msg} ({symbol})"

[MAIN]
check-quote-consistency=yes
